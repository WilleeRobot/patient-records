<h1>Show summary of patients</h1>
<h2>You are not logged in</h2>

<!--MOVE TO CSS FILE-->
<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}

tr:nth-child(even) {
    background-color: #dddddd;
}
</style>
<!--MOVE ABOVE TO CSS FILE-->

<h2>Summary List of Clinic Patients</h1>
<h3>Current Date and Time:</h3>
<p><%=Time.now.localtime.strftime("%c")%></p>
<br>

<%=@message if @message%>

<table style="width:20%">
  <tr>
    <th>User</th>
    <th>Patient Count</th>
  </tr>

  <%@users.each do |user|%>
    <tr>
        <td><%=user.username%></td>
        <td><%=user.patients.count%></td>
    </tr>
  <%end%>
</table>

<h3>Total patients in clinic: <%=@patients.all.count%></h3>

